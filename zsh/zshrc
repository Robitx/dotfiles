#!/usr/bin/env zsh

# ensure to only execute on ZSH
[ ! -n "$ZSH_VERSION" ] && return

autoload -Uz compinit
if [ $(date +'%j') != $(/usr/bin/stat -f '%Sm' -t '%j' ${ZDOTDIR:-$HOME}/.zcompdump) ]; then
  compinit;
else
  compinit -C;
fi

# autoloaded functions (lazy loading)
zsh_fpath=$DOTFILES/autoloaded
fpath=($zsh_fpath $fpath)

if [[ -d "$zsh_fpath" ]]; then
    for func in $zsh_fpath/*; do
        autoload -Uz ${func:t}
    done
fi
unset zsh_fpath

# Plugins
source ~/.zsh_plugins.sh

ZSH_AUTOSUGGEST_USE_ASYNC=true

# Disable paste highlighting
zle_highlight+=(paste:none)

# load configs
zsh_fpath=$DOTFILES/zsh/dots
if [[ -d "$zsh_fpath" ]]; then
    for file in $zsh_fpath/*.zsh; do
        source $file
    done
fi
unset zsh_fpath

[ -f ~/.local.zsh ] && source ~/.local.zsh

# Prevent duplicates in PATH and FPATH
typeset -U path fpath
export PATH
