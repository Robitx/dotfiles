#!/usr/bin/env zsh
#
export DOTFILES=$HOME/.dotfiles

export EDITOR="$(command -v nvim)"
export VISUAL=$EDITOR
export BROWSER=/Applications/Safari.app
export BLOCKSIZE=1k

# -R  color
# -F  exit if there is less than one page of content
# -X  keep content on screen after exit
# -x2 tabs are 2 instead of 8
export LESS='-XFRx2'
export PAGER='less'
export MANPAGER='less'

export LANG=en_US.UTF-8
export LC_ALL=$LANG

export GPG_TTY=$(tty)

# Highlighting inside manpages and elsewhere
export LESS_TERMCAP_mb=$(tput setaf 1)
export LESS_TERMCAP_md=$(tput setaf 4)
export LESS_TERMCAP_me=$(tput sgr0)
export LESS_TERMCAP_so=$(tput setab 4; tput bold; tput setaf 7)
export LESS_TERMCAP_se=$(tput rmso; tput sgr0)
export LESS_TERMCAP_us=$(tput bold; tput smul; tput setaf 2)
export LESS_TERMCAP_ue=$(tput rmul; tput sgr0)
export LESS_TERMCAP_mr=$(tput rev)
export LESS_TERMCAP_mh=$(tput dim)
export LESS_TERMCAP_ZN=$(tput ssubm)
export LESS_TERMCAP_ZV=$(tput rsubm)
export LESS_TERMCAP_ZO=$(tput ssupm)
export LESS_TERMCAP_ZW=$(tput rsupm)
