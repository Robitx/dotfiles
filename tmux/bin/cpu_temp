#!/usr/bin/env zsh

if [[ "$OSTYPE" == "Darwin" ]]; then
  CPU="$(osx-cpu-temp)"
elif [[ "$OSTYPE" == "Linux" ]]; then
  [[ ! -d /sys/class/thermal/ ]] && return
  CPUS=($(paste <(cat /sys/class/thermal/thermal_zone*/type) <(cat /sys/class/thermal/thermal_zone*/temp) | awk '{print $2}' | sed 's/\(.\)..$//'))
  MEAN_CPU=$(($((${CPUS[1]} + ${CPUS[2]}))/2))
  CPU="$MEAN_CPU.0 Â°C"
fi

CPU_TEMP="${CPU:0:2}"
if [[ $CPU_TEMP -ge 90 ]]; then
  CPU_COLOR="160"
elif [[ $CPU_TEMP -ge 80 ]]; then
  CPU_COLOR="202"
elif [[ $CPU_TEMP -ge 70 ]]; then
  CPU_COLOR="172"
else
  CPU_COLOR="178"
fi

echo -n " #[fg=colour$CPU_COLOR]$CPU"
