#!/usr/bin/env bash

if ping -q -c 1 -W 1 8.8.8.8 >/dev/null; then
  if [ "$OSTYPE" = "Darwin" ]; then
    LAN_IP=$(ipconfig getifaddr en0)
  else
    IPS=( $(hostname -i) )
    LAN_IP=${IPS[0]}
  fi
  WAN_IP=$(curl ifconfig.me)
  printf '%s' " #[fg=colour109]$LAN_IP#[default] #[fg=colour143]$WAN_IP#[default]"
fi
