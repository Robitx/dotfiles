{
  "suggest.autoTrigger": "always",
  "suggest.maxCompleteItemCount": 40,

  "diagnostic.messageTarget": "echo",
  "diagnostic.refreshAfterSave": true,
  "diagnostic.errorSign": "•",
  "diagnostic.warningSign": "•",
  "diagnostic.infoSign": "•",
  "diagnostic.checkCurrentLine": true,

  "python.autoComplete.addBrackets": true,
  "python.jediEnabled": true,
  "python.jediPath": "${env:HOME}/Library/Python/${env:PY_VERSION}/lib/python/site-packages",
  "python.autoUpdateLanguageServer": false,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "${env:HOME}/Library/Python/${env:PY_VERSION}/bin/flake8",
  "python.formatting.autopep8Path": "${env:HOME}/Library/Python/${env:PY_VERSION}/bin/autopep8",
  "python.venvPath": "~/envs",
  "python.analysis.diagnosticEnabled": false,

  "snippets.snipmate.author": "Frank Roeder",

  "languageserver": {
    "clangd": {
      "command": "clangd",
      "args": [ "--background-index" ],
      "rootPatterns": [ "compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/" ],
      "filetypes": [ "c", "cpp", "objc", "objcpp" ]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": [ "go.mod", ".git/" ],
      "filetypes": [ "go" ],
      "initializationOptions": {
        "staticcheck": true,
        "usePlaceholders": true,
        "completeUnimported": true,
        "caseSensitiveCompletion": true
      }
    },
    "swift": {
      "command": "sourcekit-lsp",
      "args": [],
      "filetypes": ["swift"],
      "initializationOptions": {},
      "settings": {}
    }
  }
}
