include texmath.snip

snippet     urlc
alias       \url
abbr        Link from clipboard
options     word
  \url{`system("pbpaste")`}${0}

snippet     urlcp
abbr        Link from frontmost tab
options     word
  \url{`system("osascript -e 'tell application \"Safari\" to return URL of front document' | tr -d '\n'")`}${0}

snippet txtbox
abbr Box around text
options word
  \medskip
  \noindent\fbox{%
    \parbox{\textwidth}{%
      ${0}
    }%
  } \newline

snippet foot
abbr Footnote
options word
  \footnote{${1:${VISUAL:text}}}${0}

