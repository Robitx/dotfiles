#!/bin/bash
printf '\n\e[1;34m%-6s\e[m\n' " -- macOS -- "
echo "Prevent sleep until following command finishes -"
echo "  caffeinate -s scp bigfile me:myserver/bigfile"
echo "Reveal open TCP/UDP ports - lsof -i"
echo "Sleep - ⇧ ⌘ ⏏️ "
echo "Sleep Display - ⇧ ^ ⏏️ "
echo "Use skim to open pdfs   - skim"

printf '\n\e[1;34m%-6s\e[m\n' " -- Safari -- "
echo "History Forth/Back - CMD <- / -> "
echo "Disable JavaScript - CMD-Shift-J"

printf '\n\e[1;34m%-6s\e[m\n' " -- iTerm -- "
echo "Instant Replay iterm2 - ⌘ ALT-B"
echo "Paste History iterm2 - ⇧ ⌘ H"
echo "previous shell prompts - ⇧ ⌘ ↑ / ↓"
echo "Autocomplete - ⇧ ⌘ ;"
echo "Password Manager -  ⌘ P"

printf '\n\e[1;34m%-6s\e[m\n' " -- zsh -- "
echo "d - show directory stack"
echo "cd +n - switch to directory number n"

printf '\n\e[1;34m%-6s\e[m\n' " -- Git-- "
echo "gc! - Amend most recent commit ( git commit -v --amend )"
echo "grt - cd into root of repository"
echo "gwch - show what changed"
echo "gts - verify tag with msg ( git tag -s )"
echo "grh - git reset HEAD ( unstage file )"
echo "grhh - git reset HEAD --hard ( complete remove uncommited changes )"

printf '\n\e[1;34m%-6s\e[m\n' " -- tmux-- "
echo "ta - Attach new tmux session to already running named session"
echo "ts - Create a new named tmux session"
echo "tl - Displays a list of running tmux sessions"
echo "C-a ? - Help"

printf '\n\e[1;34m%-6s\e[m\n' " -- Vim -- "
echo "<Lead><Lead>  - Quicksave"
echo "@ repeat last command-line action"
echo "<Leader>c     - Close current buffer"
echo "<Leader>space - Clear search highlight"
echo "<Leader>sce   - Toggle spell check en_us"
echo "<Leader>scd   - Toggle spell check de"
echo "<Leader>re    - Rename current file"
echo "FormatJSON()  - Format marked JSON"
echo "<Leader>*     - Search and replace the word under the cursor"
echo ":w!!          - Save with sudo"
echo "CTRL-W Z      - Close the preview window"
echo ""
echo "<C-T>         - Search file in dir/git repo"
echo "<C-H>         - Show help tags"
echo "<C-J>         - Show buffers"
echo "<C-F>         - Search line via ag in directory"
echo "<C-P>         - Search line in buffer (CtrlP like)"
echo "<Leader>g     - Git commit log of current buffer"
echo "<Leader>h     - Vim location history"
echo "<Leader>t     - Change Color theme"
echo "<C-X><C-F>    - Path completion in insert mode"
echo "<C-X><C-J>    - File completion"
echo "<C-X><C-L>    - Line completion"
echo "<C-X><C-K>    - Dictionary completion"
echo ""
echo "F2            - run/compile"
echo "F3            - Documentation in Preview Window"
echo "F4            - info/type"
echo "F5            - Go to Definition"
echo ""
echo "Spell ---"
echo "z=            - show suggestions for wrong word under cursor"
echo "zg            - Add word under cursor as good word"
echo "<Leader>z     - Replace wrong word with the first suggestions"
