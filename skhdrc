# reload yabai and skhd
ctrl + alt + cmd - r : \
       launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"; \
       skhd --reload;

# reload sketchybar
ctrl + alt + cmd - b : brew services restart sketchybar

# toggle alacritty
fn - space : bash $DOTFILES/scripts/toggle_app.bash "Alacritty"
fn + ctrl -b  : bash $DOTFILES/scripts/toggle_app.bash "Brave Browser"

# # change window focus
fn - h : yabai -m window --focus west
fn - j : yabai -m window --focus south
fn - k : yabai -m window --focus north
fn - l : yabai -m window --focus east
# going up and down inside the stack
fn - u : yabai -m window --focus stack.prev
fn - d : yabai -m window --focus stack.next

# change monitor focus
fn - y  : yabai -m display --focus recent
fn - x  : yabai -m display --focus prev
fn - c  : yabai -m display --focus next
fn - 1  : yabai -m display --focus 1
fn - 2  : yabai -m display --focus 2
fn - 3  : yabai -m display --focus 3

# move window to display and focus
fn + ctrl - y  : yabai -m window --display recent && yabai -m display --focus recent
fn + ctrl - x  : yabai -m window --display prev && yabai -m display --focus prev
fn + ctrl - c  : yabai -m window --display next && yabai -m display --focus next
fn + ctrl - 1  : yabai -m window --display 1 && yabai -m display --focus 1
fn + ctrl - 2  : yabai -m window --display 2 && yabai -m display --focus 2
fn + ctrl - 3  : yabai -m window --display 3 && yabai -m display --focus 3

# shift window in current workspace, possibly also to adjacent display
fn + ctrl - h : yabai -m window --swap west || $(yabai -m window --display west; yabai -m display --focus west)
fn + ctrl - j : yabai -m window --swap south || $(yabai -m window --display south; yabai -m display --focus south)
fn + ctrl - k : yabai -m window --swap north || $(yabai -m window --display north; yabai -m display --focus north)
fn + ctrl - l : yabai -m window --swap east || $(yabai -m window --display east; yabai -m display --focus east)

fn + ctrl - s : open "x-apple.systempreferences:"
fn + ctrl - a : open -a "About This Mac"

# quit/close focused window
fn - q : yabai -m window --close

# enter fullscreen mode for the focused container
fn - f : yabai -m window --toggle zoom-fullscreen

# toggle window native fullscreen
fn + shift - f : yabai -m window --toggle native-fullscreen

# toggle stickyness (show on all spaces)
fn + shift - s : yabai -m window --toggle sticky
# toggle topmost (keep above other windows)
fn + shift - t : yabai -m window --toggle topmost
# toggle window split type
fn + shift - space: yabai -m window --toggle split
# toggle desktop offset
fn + shift - d : yabai -m space --toggle padding && yabai -m space --toggle gap
# toggle window parent zoom
fn + shift - z : yabai -m window --toggle zoom-parent

# move focused window to next/prev workspace
fn + shift - 1 : yabai -m window --space 1
fn + shift - 2 : yabai -m window --space 2
fn + shift - 3 : yabai -m window --space 3
fn + shift - 4 : yabai -m window --space 4
fn + shift - 5 : yabai -m window --space 5
fn + shift - 6 : yabai -m window --space 6
fn + shift - 7 : yabai -m window --space 7
fn + shift - 8 : yabai -m window --space 8
fn + shift - 9 : yabai -m window --space 9

# rotate tree
fn - r : yabai -m space --rotate 90

# # mirror tree x-axis
fn + shift - x : yabai -m space --mirror x-axis

## # mirror tree y-axis
fn + shift - y : yabai -m space --mirror y-axis

# balance size of windows
fn + shift - 0 : yabai -m space --balance

# change layout of space (i3 defaults)
fn - e : yabai -m space --layout bsp
fn - w : yabai -m space --layout float
fn - s : yabai -m space --layout stack

# TODO
# increase window size
shift + alt - h : yabai -m window --resize left:-20:0; yabai -m window --resize right:20:0
shift + alt - j : yabai -m window --resize bottom:0:20
shift + alt - k : yabai -m window --resize top:0:-20
shift + alt - l : yabai -m window --resize right:-20:0; yabai -m window --resize left:20:0

# make floating window fill screen
shift + alt - up     : yabai -m window --grid 1:1:0:0:1:1
# make floating window fill left-half of screen
shift + alt - left   : yabai -m window --grid 1:2:0:0:1:1
# make floating window fill right-half of screen
shift + alt - right  : yabai -m window --grid 1:2:1:0:1:1
# float / unfloat window and center on screen
shift + alt - down : yabai -m window --toggle float; yabai -m window --grid 4:4:1:1:2:2

# toggle picture-in-picture
fn - p : yabai -m window --toggle border && yabai -m window --toggle pip
